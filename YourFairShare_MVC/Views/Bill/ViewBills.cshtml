@model IEnumerable<YourFairShare_MVC.Models.BillModel>

@{
    ViewBag.Title = "ViewBills";
}

<h2>ViewBills</h2>

<p>
    @Html.ActionLink("Create New Bill", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DueDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DueDate)
        </td>
        <td>
            @Html.ActionLink("Edit Bill", "Edit", new { name=item.Name }) |
            
            @Html.ActionLink("Delete", "Delete", new { name = item.Name })
        </td>
    </tr>
}

</table>
